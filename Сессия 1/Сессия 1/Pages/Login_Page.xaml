<Page x:Class="Сессия_1.Pages.Login_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сессия_1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login_Page">

    <Grid x:Name="Main_Grid" Background="White">

        <StackPanel x:Name="Login_GUI" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label x:Name="Login_Lbl" Content="Логин:" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource Lbl_Style}"/>
            <TextBox x:Name="Login_Txb" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="250" Style="{StaticResource Txb_Style}"/>
            <Label x:Name="Password_Lbl" Content="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource Lbl_Style}"/>
            <PasswordBox x:Name="Password_Psb" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Style="{StaticResource Psb_Style}"/>
            <Button x:Name="Login_Btn" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource Btn_Style}" Margin="0,10,0,0" Click="Login_Btn_Click"/>
        </StackPanel>

    </Grid>
</Page>
